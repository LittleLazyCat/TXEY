package com.txey.record.placeholder;

import org.springframework.beans.factory.config.PropertyPlaceholderConfigurer;

//继承PropertyPlaceholderConfigurer定义支持密文版属性的属性配置器
public class EncryptPropertyPlaceholderConfigure extends PropertyPlaceholderConfigurer {
	private String[] encryptPropNames ={"userName","password"};
	
	//对特定属性的属性值进行转换
	@Override
	protected String convertProperty(String propertyName,String propertyVaalue){
		if(isEn)
	}
	
	//判断是否是需要进行解密的属性 
	private boolean isEncryptProp(String  propertyName){
		for(String encryptPropName : encryptPropNames){
			if(encryptPropName.equals(encryptPropName))
			{
				return true;
			}
		}
		return false;
	}
}
