<mapper namespace="com.txey.record.dao.mybatis.RecordMybatisDao">
<insert id="addRecord" parameterType="Record">
 INSERT INTO tb_record(jlsj,ksid,lxid,lyid,wtms,fsid,sjid,wxfy,ygid,ztid,qrbz,wxbz)
 VALUES(#{jlsj},#{dept.ksid},#{kind.lxid},#{contact.lyid},#{wtms},#{method.fsid},#{time.sjid},#{wxfy},#{employee.ygid},#{state.ztid},#{qrbz},#{wxbz})  
</insert>
<select id="getRecordDetail" parameterType="int" parameterType="int" resultMap="RecordMap">
SELECT jlid,jlsj,ksmc,lxmc,lymc,wtmc,fsmc,sjmc,wxfy,ygxm,ztmc,wxbz
FROM view_record_detail WHERE YEAR(jlsj) =#{year} AND MONTH(jlsj)=#{month}
</select>
<resultMap type="Record" id="RecordMap">
<constructor>
<idArg column="jlid" javaType="int"/>
<arg column="jlsj" javaType="String"/>

</constructor>
</resultMap>
</mapper>